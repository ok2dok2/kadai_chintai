<h1>物件登録</h1>

<%= form_with(model: @home, local: true, url: confirm_homes_path ) do |form| %>

      <p><%= form.label :物件名 %></p>
      <p><%= form.text_field :name %></p>

      <p><%= form.label :"賃料" %></p>
      <p><%= form.text_field :rent %>円</p>

      <p><%= form.label :"住所" %></p>
      <p><%= form.text_field :address %></p>

      <p><%= form.label :"築年数" %></p>
      <p><%= form.text_field :age %>年</p>

      <p><%= form.label :"備考" %></p>
      <p><%= form.text_area :remarks %></p>

      <% @number = 0 %>
      <hr noshade>
      <%= form.fields_for :stations do | station | %>
      <p>最寄り駅<%= @number += 1 %></p>
      
      <p><%= station.label :route, "路線名" %></p>
      <p><%= station.text_field :route %>線</p>

      <p><%= station.label :station, "駅名" %></p>
      <p><%= station.text_field :station %>駅</p>

      <p><%= station.label :minute, "徒歩分数" %></p>
      <p><%= station.text_field :minute %>分</p>

      
  <% end %>


    <%= form.submit "登録する" %>
  <% end %>

  <%= link_to "戻る",homes_path %>