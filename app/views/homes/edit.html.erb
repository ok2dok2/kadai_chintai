<h1>物件編集</h1>

<%= form_with(model: @home, local: true) do |form| %>

      <p><%= form.label :物件名 %></p>
      <p><%= form.text_field :name %></p>

      <p><%= form.label :"賃料" %></p>
      <p><%= form.text_field :rent %></p>

      <p><%= form.label :"住所" %></p>
      <p><%= form.text_field :address %></p>

      <p><%= form.label :"築年数" %></p>
      <p><%= form.text_field :age %></p>

      <p><%= form.label :"備考" %></p>
      <p><%= form.text_area :remarks %></p>

      <hr noshade>
      <p>最寄り駅1</p>
      <%= form.fields_for :stations do | station | %>
      
      <p><%= station.label :route, "路線名" %></p>
      <p><%= station.text_field :route %></p>

      <p><%= station.label :station, "駅名" %></p>
      <p><%= station.text_field :station %></p>

      <p><%= station.label :minute, "徒歩分数" %></p>
      <p><%= station.text_field :minute %></p>

      
  <% end %>


    <%= form.submit "編集する" %>
  <% end %>